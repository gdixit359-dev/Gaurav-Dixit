<div class="banner-image-text-wrapper">
  <div class="banner-image-inner">
    {%- if section.settings.background_image != blank -%}
      {% render 'image', image: section.settings.background_image, class: 'background-image' %}
    {%- endif -%}
    <div class="banner-image-text-content">
      {% if section.settings.heading != blank %}
        <h1>{{ section.settings.heading }}</h1>
      {%- endif -%}
      {%- if section.settings.description != blank %}
        <p>{{ section.settings.description }}</p>
      {%- endif -%}
      {%- if section.settings.button_text and section.settings.button_url %}
        <a href="{{ section.settings.button_url }}" class="button-primary">{{ section.settings.button_text }}</a>
      {%- endif -%}
    </div>
  </div>
  {%- if section.settings.bottom_text != blank -%}
    <div class="banner-image-bottom-text">
      <p>{{ section.settings.bottom_text }}</p>
    </div>
  {%- endif -%}
</div>
{% schema %}
  {
    "name": "Banner Image with Text",
    "class": "banner-image-with-text",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      },
      {
        "type": "text",
        "id": "bottom_text",
        "label": "Bottom text"
      }
    ],
    "presets": [
      {
        "name": "Banner Image with Text",
        "category": "Custom Sections"
      }
    ]
  }
  {% endschema %}